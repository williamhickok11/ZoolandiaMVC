@model ZoolandiaMVC.Models.Animal

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-controller="Movies" asp-action="Index">
    <p>
        Genre: @Html.DropDownList("habitatList", "Give me all of them!")
        Title: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>




<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Animal</h4>

        

        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="IdHabitat" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IdHabitat" class="form-control" />
                <span asp-validation-for="IdHabitat" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IdSpecies" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IdSpecies" class="form-control" />
                <span asp-validation-for="IdSpecies" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
